<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/feature_weather_height"
    android:layout_alignParentBottom="true" >

    <ImageView
        android:id="@+id/imgeview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/feature_weather_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/feature_weather_background" />

    <!-- day1 -->

    <LinearLayout
        android:id="@id/celllayout01"
        android:layout_width="@dimen/feature_weather_cell_width"
        android:layout_height="@dimen/feature_weather_cell_height"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@id/cell_textview_week01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="星期三"
            android:textColor="#ff101010"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageview_week01"
            android:layout_width="@dimen/feature_weather_img_width"
            android:layout_height="@dimen/feature_weather_img_height"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/sunny_day_medium" />

        <TextView
            android:id="@id/textview_condition1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="晴"
            android:textColor="#ff101010"
            android:textSize="13sp" />

        <TextView
            android:id="@id/textview_tmp01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="30℃/24℃"
            android:textColor="#ff101010"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- day2 -->

    <LinearLayout
        android:id="@id/celllayout02"
        android:layout_width="@dimen/feature_weather_cell_width"
        android:layout_height="@dimen/feature_weather_cell_height"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/celllayout01"
        android:orientation="vertical" >

        <TextView
            android:id="@id/cell_textview_week02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="星期四"
            android:textColor="#ff101010"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageview_week02"
            android:layout_width="@dimen/feature_weather_img_width"
            android:layout_height="@dimen/feature_weather_img_height"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/overcast_medium" />

        <TextView
            android:id="@id/textview_condition2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="阴"
            android:textColor="#ff101010"
            android:textSize="13sp" />

        <TextView
            android:id="@id/textview_tmp02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="31℃/23℃"
            android:textColor="#ff101010"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- day3 -->

    <LinearLayout
        android:id="@id/celllayout03"
        android:layout_width="@dimen/feature_weather_cell_width"
        android:layout_height="@dimen/feature_weather_cell_height"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/celllayout02"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cell_textview_week03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="星期五"
            android:textColor="#ff101010"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageview_week03"
            android:layout_width="@dimen/feature_weather_img_width"
            android:layout_height="@dimen/feature_weather_img_height"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/rainny_day_medium" />

        <TextView
            android:id="@id/textview_condition3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="雨"
            android:textColor="#ff101010"
            android:textSize="13sp" />

        <TextView
            android:id="@id/textview_tmp03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="30℃/24℃"
            android:textColor="#ff101010"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- day4 -->

    <LinearLayout
        android:id="@id/celllayout04"
        android:layout_width="@dimen/feature_weather_cell_width"
        android:layout_height="@dimen/feature_weather_cell_height"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/celllayout03"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cell_textview_week04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="星期六"
            android:textColor="#ff101010"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageview_week04"
            android:layout_width="@dimen/feature_weather_img_width"
            android:layout_height="@dimen/feature_weather_img_height"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/cloudy_day_medium" />

        <TextView
            android:id="@id/textview_condition4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="多云"
            android:textColor="#ff101010"
            android:textSize="13sp" />

        <TextView
            android:id="@id/textview_tmp04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="30℃/24℃"
            android:textColor="#ff101010"
            android:textSize="13sp" />
    </LinearLayout>
    <!-- 状态条 -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/status_bar_height"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <!--
                 <ImageView
                android:id="@+id/refresh_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:onClick="onClick"
                android:src="@drawable/refresh_icon" />
            -->

            <TextView
                android:id="@+id/textview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="20:36"
                android:textColor="#ff101010"
                android:textSize="13sp" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
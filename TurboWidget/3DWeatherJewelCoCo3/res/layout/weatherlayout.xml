<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weLayout"
    android:layout_width="310dp"
    android:layout_height="176dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/land_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/weather_default" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp" >

        <ImageView
            android:id="@+id/dateLeft1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="36dp" />

        <ImageView
            android:id="@+id/dateLeft2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <ImageView
            android:id="@+id/timedot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
            <!--  weijie_20121122_01 this resource should be set in code -->
            <!--  because that has an align question when the time isnot viewing -->
             
           <!-- android:src="@drawable/time_dot" /> -->

        <ImageView
            android:id="@+id/dateRigth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <ImageView
            android:id="@+id/dateRigth2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <ImageView
            android:id="@+id/turnanimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="172dp"
            android:layout_marginTop="dp" />

       
    </LinearLayout>

     <TextView
            android:id="@+id/AM_PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="264dp"
            android:layout_marginTop="56dp"
            android:text="AM"
            android:textColor="#FFFFFFFF"
            android:textSize="16dp" />
            
    <TextView
        android:id="@+id/tadayDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:shadowColor="#0f0f0f"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="       "
        android:textColor="#f6f7c9"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/spce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
         android:layout_alignParentRight="true"            
        android:layout_marginRight="16dp"         
        android:layout_marginTop="110dp"
        android:text=" " />
    <TextView
        android:id="@+id/curadress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"             
        android:layout_alignRight="@id/spce"
        android:layout_below="@id/spce"
        android:shadowColor="#0f0f0f"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/select_postalCode"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp" />
<!-- android:layout_marginLeft="266dp" -->
    <TextView
        android:id="@+id/curweather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/curadress"
        android:layout_below="@id/curadress"
        android:shadowColor="#0f0f0f"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/nodate"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/curTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="248dp"
        android:layout_marginTop="138dp"
        android:text="N/A"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="132dp" >

        <TextView
            android:id="@+id/TemperatureRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#0f0f0f"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="  "
            android:textColor="#FFFFFFFF"
            android:textSize="32dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/degreescelsius1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/degreescelsius"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/tempc_dot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tempc_dot"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/TemperatureLower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#0f0f0f"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="  "
            android:textColor="#FFFFFFFF"
            android:textSize="32dp" />

        <ImageView
            android:id="@+id/degreescelsius2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/degreescelsius"
            android:visibility="invisible" />
    </LinearLayout>
    
     <RelativeLayout
        android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop = "130dp" >
			 <ImageView
			        android:id = "@+id/curweatherImage"
			        android:layout_width="fill_parent"
			        android:layout_height="52dp"
			        android:background="#00000000"
			         android:layout_centerInParent = "true" />			 
			 </RelativeLayout>
			 


</RelativeLayout>